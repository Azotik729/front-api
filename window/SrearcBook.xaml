<Window x:Class="LykovFront.window.SrearcBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LykovFront.window"
        mc:Ignorable="d"
        Title="SrearcBook" Height="450" Width="800">
    <Grid>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,192,10,24" BorderBrush="#FF5643B3" Foreground="#FF5643B3"/>
        <Button x:Name="ExitButton" Content="Назад" HorizontalAlignment="Left" Margin="676,26,0,0" VerticalAlignment="Top" Width="86" BorderBrush="#FF5643B3" Foreground="#FF5643B3" Background="White"/>
        <TextBox x:Name="SearcTextBox" HorizontalAlignment="Left" Margin="26,169,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="184" SelectionBrush="#FF5643B3" BorderBrush="#FF5643B3"/>
        <Button x:Name="SearchButton" Content="Поиск" HorizontalAlignment="Left" Margin="251,167,0,0" VerticalAlignment="Top" Width="106" BorderBrush="#FF5643B3" Background="White" Foreground="#FF5643B3"/>
        <Label Content="Раздел" HorizontalAlignment="Left" Margin="131,65,0,0" VerticalAlignment="Top" Foreground="#FF5643B3"/>
        <Label Content="Автор" HorizontalAlignment="Left" Margin="326,65,0,0" VerticalAlignment="Top" Foreground="#FF5643B3"/>
        <Label Content="Год издания" HorizontalAlignment="Left" Margin="497,65,0,0" VerticalAlignment="Top" Foreground="#FF5643B3"/>
        <ComboBox HorizontalAlignment="Left" Margin="95,96,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox HorizontalAlignment="Left" Margin="288,96,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox HorizontalAlignment="Left" Margin="476,96,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
