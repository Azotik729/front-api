<Window x:Class="LykovFront.window.AddBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LykovFront.window"
        mc:Ignorable="d"
        Title="AddBook" Height="372" Width="335">
    <Grid>
        <Label x:Name="nameBook" Content="Название" HorizontalAlignment="Left" Margin="35,50,0,0" VerticalAlignment="Top" Foreground="#FF5643B3"/>
        <Label Content="Автор" HorizontalAlignment="Left" Margin="35,100,0,0" VerticalAlignment="Top" Foreground="#FF5643B3"/>
        <Label Content="Год издания" HorizontalAlignment="Left" Margin="35,150,0,0" VerticalAlignment="Top" Foreground="#FF5643B3"/>
        <Label Content="Цена" HorizontalAlignment="Left" Margin="35,200,0,0" VerticalAlignment="Top" Foreground="#FF5643B3"/>
        <TextBox x:Name="NameBookTextBox" HorizontalAlignment="Left" Margin="118,58,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Foreground="#FF5643B3" SelectionBrush="#FF5643B3" BorderBrush="#FF5643B3"/>
        <TextBox x:Name="WriterBookTextBook" HorizontalAlignment="Left" Margin="118,108,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" BorderBrush="#FF5643B3"/>
        <TextBox x:Name="DataPostBookTextBox" HorizontalAlignment="Left" Margin="118,154,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" BorderBrush="#FF5643B3"/>
        <TextBox x:Name="PriceBookTextBox" HorizontalAlignment="Left" Margin="118,204,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" BorderBrush="#FF5643B3"/>
        <Button x:Name="AddBookButton" Content="Button" HorizontalAlignment="Center" Margin="0,276,0,0" VerticalAlignment="Top" Width="110" BorderBrush="#FF5643B3" Foreground="#FF5643B3" Background="White"/>

    </Grid>
</Window>
